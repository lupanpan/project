page {
  background: #fafafa;
}

/* 封面部分 */
.header-cover {
  position: relative;
  height: 500rpx;
  overflow: hidden;
}

.header-cover image {
  width: 100%;
  height: 100%;
}

.header-cover .mask {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .3);
}

.header-cover .desc {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 0 20rpx 60rpx 20px;
  font-size: 38rpx;
  font-weight: 600;
  color: #fff;
  z-index: 0;
}

.header-cover .cover-source {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  color: #ccc;
  font-size: 8px;
}

.black-desc {
  padding: 50rpx;
  font-weight: 700;
}

/* 文章部分 */
.main {
  padding-bottom: 150rpx;
}

/* 每一篇文章 */
.article {
  padding: 40rpx;
  margin-bottom: 20rpx;
  background: #fff;
}

/* 标题 */
.article .title {
  padding-bottom: 40rpx;
  font-size: 40rpx;
  font-weight: 700;
}

/* 作者简介部分 */
.article .author-info {
  overflow: hidden;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 20rpx;
}

.article .author-info .avatar {
  float: left;
  width: 60rpx;
  height: 60rpx;
  border-radius: 5rpx;
}

.article .author-info .author-name {
  float: left;
  font-weight: 700;
  margin-left: 20rpx;
}

.article .author-info .author-mark {
  float: left;
  font-size: 13px;
  color: #999;

  overflow: hidden; /*自动隐藏文字*/
  text-overflow: ellipsis; /*文字隐藏后添加省略号*/
  white-space: nowrap; /*强制不换行*/
  width: 300rpx;
}