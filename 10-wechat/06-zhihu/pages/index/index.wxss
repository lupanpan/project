/* 页面显示主体部分 */
.main {
  width: 100%;
  height: 100%;
}

/* 首页显示部分 */
/* 滑动面板部分 */
.index-swiper {
  position: relative;
  height: 430rpx;
}

.index-swiper-img {
  width: 100%;
}

/* 图片阴影遮罩 */
.index-swiper .mask {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.3);
}

/* 文字描述 */
.index-swiper-desc {
  box-sizing: border-box;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 60px;
  background: rgba(0,0,0,0.3);
  padding: 25rpx 80rpx;
  color: #fff;
  font-size: 15px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 今日热文模块 */
.main-list-header {
  height: 80rpx;
  line-height: 80rpx;
  background: #019DD6;
  text-align: center;
}

.main-list-header .title, .main-list-header .date{
  display: inline-block;
  font-size: 14px;
  color: #fff;
}

.main-list-header .title {
  margin-right: 30rpx;
}

/* 内容列表模块 */
.common-list {
  padding: 0 30rpx;
}

.list-item {
  box-sizing: border-box;
  height: 180rpx;
  border-bottom: 1px solid #eee;
  padding-top: 25rpx;
}

.list-item .content {
  float: left;
  width: 520rpx;
  vertical-align: middle;
  font-size: 15px;
}

.list-item image {
  width: 150rpx;
  height: 130rpx;
}

