page {
  position: relative;
  height: 100%;
  font-family: 'microsoft yahei ui';
}


/* 遮罩层 */
.slide-mask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0,0,0,0.3);
  z-index: 100;
}


/* 滑动面板部分 */
.index-swiper {
  position: relative;
  height: 430rpx;
}

.index-swiper-img {
  width: 100%;
}

/* 图片阴影遮罩 */
.index-swiper .mask {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.3);
}

/* 文字描述 */
.index-swiper-desc {
  box-sizing: border-box;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 60px;
  background: rgba(0,0,0,0.3);
  padding: 25rpx 80rpx;
  color: #fff;
  font-size: 15px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}


/* 底部加载更多图标 */
.refresh-block {
  padding: 20rpx;
  text-align: center;
}

.refresh-block image {
  width: 50rpx;
  height: 50rpx;
}

/* 分享模态框 */
.share-list .item {
  display: inline-block;
  width: 33.333333%;
  text-align: center;
}

.share-list .item image {
  width: 120rpx;
  height: 120rpx;
}